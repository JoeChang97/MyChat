<Window x:Class="MyChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        
        xmlns:my1="clr-namespace:MyChat.ViewModels"
        Title="Client" Height="450" Width="800">

    <Window.DataContext>
        <my1:ClientViewModel />
    </Window.DataContext>
    <Grid>
        <Button Content="Connect" Command="{Binding Connect}" HorizontalAlignment="Left" Height="26" Margin="390,309,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="-0.662,0.475"/>
        <Button Content="Send" Command="{Binding Send}" HorizontalAlignment="Left" Height="26" Margin="390,363,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-2.37,3.831"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="10,309,0,0" TextWrapping="Wrap" Text="{Binding Message}" VerticalAlignment="Top" Width="375"/>
        <TextBox HorizontalAlignment="Left" Height="269" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Chatboard}" VerticalAlignment="Top" Width="375"/>
        <Label x:Name="QuestionLabel" Content="Question" HorizontalAlignment="Left" Margin="575,36,0,0" VerticalAlignment="Top"/>
        <Button x:Name="TrueBtn" Content="True fact" HorizontalAlignment="Left" Margin="508,74,0,0" VerticalAlignment="Top" Width="74" Click="TrueBtn_Click"/>
        <Button x:Name="FalseBtn" Content="False bruh" HorizontalAlignment="Left" Margin="627,74,0,0" VerticalAlignment="Top" Width="74" Click="FalseBtn_Click"/>
        <Label Content="Player 1" HorizontalAlignment="Left" Margin="508,151,0,0" VerticalAlignment="Top"/>
        <Label Content="0" HorizontalAlignment="Left" Margin="627,151,0,0" VerticalAlignment="Top"/>
        <Label Content="Player 1 is playing" HorizontalAlignment="Left" Margin="555,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Leaderboard" HorizontalAlignment="Left" Margin="508,120,0,0" VerticalAlignment="Top"/>
        <Label Content="Player 2" HorizontalAlignment="Left" Margin="508,182,0,0" VerticalAlignment="Top"/>
        <Label Content="1" HorizontalAlignment="Left" Margin="627,182,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" Height="80" Margin="508,309,0,0" VerticalAlignment="Top" Width="193"/>

    </Grid>
</Window>
