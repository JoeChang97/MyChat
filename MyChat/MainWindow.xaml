<Window x:Class="MyChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        
        xmlns:my1="clr-namespace:MyChat.ViewModels"
        Title="Client" Height="450" Width="800">

    <Window.DataContext>
        <my1:ClientViewModel />
    </Window.DataContext>
    <Grid>
        <Button Content="Connect" Command="{Binding Connect}" HorizontalAlignment="Left" Height="26" Margin="390,309,0,0" VerticalAlignment="Top" Width="89" RenderTransformOrigin="-0.662,0.475"/>
        <Button Content="Send" Command="{Binding Send}" HorizontalAlignment="Left" Height="26" Margin="390,363,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-2.37,3.831"/>
        <TextBox HorizontalAlignment="Left" Height="80" Margin="10,309,0,0" TextWrapping="Wrap" Text="{Binding Message}" VerticalAlignment="Top" Width="375"/>
        <TextBox HorizontalAlignment="Left" Height="269" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Chatboard}" VerticalAlignment="Top" Width="375"/>
        <ListBox HorizontalAlignment="Left" Height="269" Margin="501,10,0,0" VerticalAlignment="Top" Width="206" RenderTransformOrigin="0.917,0.513"/>
        <TextBox HorizontalAlignment="Left" Height="61" Margin="501,284,0,0" TextWrapping="Wrap" Text="Type Task Here:" VerticalAlignment="Top" Width="206"/>
        <Button Content="Add" HorizontalAlignment="Left" Height="26" Margin="717,309,0,0" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.58,1.757"/>
        <Button Content="Delete" HorizontalAlignment="Left" Height="26" Margin="712,10,0,0" VerticalAlignment="Top" Width="66"/>
        <Label Content="To Do:" HorizontalAlignment="Left" Height="26" Margin="439,10,0,0" VerticalAlignment="Top" Width="57" RenderTransformOrigin="0.981,-0.891"/>

    </Grid>
</Window>
